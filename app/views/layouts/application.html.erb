<!DOCTYPE html>
<html>
<head>
  <title>Hope</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if user_signed_in? %>
  <li class="navbar-brand"> Welcome <%= current_user.email %>! </li>
  <li><%= link_to 'Out', destroy_user_session_path, :method => :delete %></li> 
  <div><%= link_to 'My Page', user_path(current_user.id) %><div>
<% else %>
  <li><%= link_to 'Sign in', new_user_session_path %> </li>
  <li><%= link_to 'Sing up', new_user_registration_path %></li>
  <li><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %></li>
  <li><%= link_to "Sign in with VK", user_omniauth_authorize_path(:vkontakte) %></li>
<% end %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
